<!-- USER SELECTION -->
<script id="users-template" type="text/x-handlebars-template">
  <h1>Users</h1>
  <ul>
    {{#each users}}
      <li class="users" data-user-id="{{id}}">{{name}}</li>
    {{/each}}
  </ul>
</script>

<script id="user-template" type="text/x-handlebars-template">
  <p>{{name}}</p>
  <p>{{email}}</p>
  <p><a id="back-to-users" href="#">Back to Users</a></p>
</script> 


<!-- ARTICLES SELECTION -->
<script id="articles-template" type="text/x-handlebars-template">
  <h1>Articles</h1>
  <ul>
    {{#each articles}}
      <li class="articles" data-article-id="{{id}}"> 
        <h2>{{title}}</h2>
        <h3>Tags :</h3>
        {{#each tags}}
          <p>{{badge}}</p>
        {{/each}}
        <p>{{body}}</p>
        <p>By {{author}}</p>
        <p>{{created_at}}</p>
        <p>Comments: </p>
        <ul>
          {{#each comments}}
          <li>{{body}}</li>
          <p>{{user.name}}</p>
          {{/each}}
        </ul>
      </li>
    {{/each}}
  </ul>
</script>

<script id="article-template" type="text/x-handlebars-template">
  <h1>{{title}}</h1>
  <ul>
    {{#each tags}}
      <li>
        <p>{{badge}}</p>
      </li>
    {{/each}}
  </ul>
  <p>{{body}}</p>
  <p>By {{author}}</p>
  <p><a id="back-to-articles" href="#">Back to all articles</a></p>
</script>

<!-- TAGS SELECTION -->
<script id="tags-template" type="text/x-handlebars-template">`
  <h1>Tags</h1>
  <ul>
    {{#each tags}}
      <h2 class="tags" data-tag-id="{{id}}">{{badge}}</h2>
    {{/each}}
  </ul>
</script>

<script id="tag-template" type="text/x-handlebars-template">`
  <h1>Selected tag</h1>
  <h2>{{badge}}</h2>
  <p>{{id}}</p>
  <p><a id="back-to-tags" href="#">Back to all tags</a></p>
</script>

<section id="content-users"></section>
<section id="content-tags"></section>
<section id="content-articles"></section>

<button id="create-article">Create article</button>



